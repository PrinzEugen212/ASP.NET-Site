@model IEnumerable<CourseWork.Models.Client>

@{
    ViewBag.Title = "ChooseClient";
}

<h2>Добавление приёма: Выберите клиента</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @using (Html.BeginForm("ChooseAnimal", "AddVisit", FormMethod.Post))
                {
                    @Html.Hidden("EmployeeID", ViewBag.EmployeeID as string)
                    @Html.Hidden("HelperID", ViewBag.HelperID as string)
                    @Html.Hidden("Date", ViewData["Date"])
                    <div>
                        @Html.Hidden("ClientID", item.Id)
                        <input type="submit" value="Выбрать" class="btn btn-primary" />
                    </div>
                }
            </td>
        </tr>
    }

</table>