@model IEnumerable<CourseWork.Models.Employee>

@{
    ViewBag.Title = "Выберите помощника";
}

<h2>Добавление приёма: Выберите помощника</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Speciality)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speciality)
            </td>
            <td>
                @using (Html.BeginForm("ChooseHelper", "AddVisit", FormMethod.Post))
                {
                    @Html.Hidden("EmployeeID", ViewBag.EmployeeID as string)
                    <div>
                        @Html.Hidden("HelperID", item.Id)
                        <input type="submit" value="Выбрать" class="btn btn-primary" />
                    </div>
                }
            </td>
        </tr>
    }

</table>
