@model IEnumerable<CourseWork.Models.Animal>

@{
    ViewBag.Title = "ChooseAnimal";
}

<h2>Добавление приёма: Выберите питомца</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Breed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Breed)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Photo)
    </td>
    <td>
        @using (Html.BeginForm("FillVisit", "AddVisit", FormMethod.Post))
        {
            @Html.Hidden("EmployeeID", ViewBag.EmployeeID as string)
            @Html.Hidden("HelperID", ViewBag.HelperID as string)
            @Html.Hidden("ClientID", ViewBag.ClientID as string)
            @Html.Hidden("Date", ViewData["Date"] as string)
            <div>
                @Html.Hidden("AnimalID", item.Id)
                <input type="submit" value="Выбрать" class="btn btn-primary" />
            </div>
        }
    </td>
</tr>
}

</table>
